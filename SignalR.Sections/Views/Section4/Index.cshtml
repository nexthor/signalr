    ViewData["Title"] = "Section 4 - Harry Potter House";
}

<h2>@ViewData["Title"]</h2>

<div class="row border p-1 mt-3">
    <h3>Subscribed List: </h3>
    <hr />
    <div class="row p-2">
        <div class="col-3">
            <label style="color:#B52033" id="lbl_houseJoined">Subscribed House Names</label>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Section 7 - Order Update";
}

<h2>@ViewData["Title"]</h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">Create Order</a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Item</th>
                <th>Count</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/datatables.bootstrap.min.js"></script>
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable({
                "ajax": {
                    "url": "/Orders/GetOrders",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "id", "autoWidth": true },
                    { "data": "name", "autoWidth": true },
                    { "data": "itemName", "autoWidth": true },
                    { "data": "count", "autoWidth": true },
                    {
                        "data": "id", "width": "50px", "render": function (data) {
                            return '<a class="btn btn-primary" href="/Order/Edit/' + data + '">Edit</a>';
                        }
                    }
                ]
            });
        });
    </script>
}